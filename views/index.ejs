<!DOCTYPE html>
<html lang="en">

<%- include('layouts/head'); -%>

<body>
  <%- include('layouts/navbar'); -%>
  
  <div class="container">
      <h1>Главная</h1>
      <% if(loggedIn && role && nickname) { %>
        <h2>Добрый день, <%= nickname %>!</h2>
        <button class="test">click</button>
      <% } else { %>
        <h2>Войдите</h2>
      <% } %>

      <div class="posts">
        <% for(let i = 0; i < posts.length; i++) { %>
          <div class="post">
            <h2><a href="/post/<%= posts[i].post_id %>"><%= posts[i].title %></a></h2>
            <small>by <a href="/user/<%= posts[i].author %>"><%= posts[i].author %></a> <%= posts[i].last_update %></small>
            <div class="post-info">
              <span><i class="fa fa-heart"></i> <%= posts[i].likes %></span>
              <span><i class="fa fa-heart"></i> <%= posts[i].comments %></span>
            </div>
          </div>
        <% } %>
      </div>
  </div>

  <%- include('layouts/footer'); -%>
  <script>
    $(document).ready(() => {
      $('.test').on('click', (e) => {
        e.stopPropagation();
        $.ajax({
          type: 'POST',
          url: '/comment/like/1',
          success: () => alert('done!'),
          error: () => alert('error :(')
        });
      })
    });
  </script>
</body>
</html>